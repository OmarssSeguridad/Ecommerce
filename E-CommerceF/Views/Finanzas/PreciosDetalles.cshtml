@model E_CommerceF.Models.HISTORIAL_PRECIO

@{
    ViewBag.Title = "PreciosDetalles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt--6">
    <div class="row">

        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Autorizacion de precios </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form  action="/Finanzas/editPreciosDetalles" method="post">
                        <h6 class="heading-small text-muted mb-4">Datos de autorización</h6>
                        <div class="pl-lg-4">
                            <input type="text" hidden name="id" value="@Model.Id" class="form-control">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Número de producto</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" value="@Model.PRODUCTO.ID">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Fecha de alta</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" value="@Model.PRODUCTO.CREATED_AT">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Precio Actual</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" value="@Model.PRODUCTO.PRECIO">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Precio Nuevo</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" value="@Model.PRECIO">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Razon</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" value="@Model.RAZON">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Observaciones</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="observaciones" value="">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Status</label>
                                <div class="col-sm-8">
                                    <select class="form-control" name="status">
                                        <option>Autorizado</option>
                                        <option>No autorizado</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row justify-content-end">
                                <div class="col-4">
                                    <button type="submit" class="btn btn-primary">Aceptar</button>
                                </div>
                                <div class="col-4">
                                    <button type="button" class="btn btn-danger">Cancelar</button>
                                </div>
                            </div>


                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>